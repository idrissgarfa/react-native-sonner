{
  "name": "react-native-sonner",
  "version": "0.1.1",
  "description": "An opinionated toast component for React Native.",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-sonner-example",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "build": "bob build",
    "typecheck": "tsc",
    "test": "jest",
    "release": "release-it --only-version"
  },
  "keywords": [
    "react-native",
    "toast",
    "notification",
    "sonner",
    "expo",
    "ios",
    "android",
    "snackbar",
    "alert"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idrissgarfa/react-native-sonner.git"
  },
  "author": "Idriss Garfa <idrissgarfa@outlook.com> (https://github.com/idrissgarfa)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/idrissgarfa/react-native-sonner/issues"
  },
  "homepage": "https://github.com/idrissgarfa/react-native-sonner#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@react-native/babel-preset": "0.83.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.2.0",
    "commitlint": "^19.8.1",
    "del-cli": "^6.0.0",
    "expo-haptics": "^15.0.8",
    "jest": "^29.7.0",
    "lefthook": "^2.0.3",
    "react": "19.2.0",
    "react-native": "0.83.0",
    "react-native-builder-bob": "^0.40.13",
    "react-native-gesture-handler": "^2.16.0",
    "react-native-reanimated": "^3.10.0",
    "react-native-safe-area-context": "^4.10.0",
    "react-native-svg": "^15.0.0",
    "release-it": "^19.0.4",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "expo-haptics": ">=13.0.0",
    "react": ">=18.0.0",
    "react-native": ">=0.70.0",
    "react-native-gesture-handler": ">=2.0.0",
    "react-native-reanimated": ">=3.0.0",
    "react-native-safe-area-context": ">=4.0.0",
    "react-native-svg": ">=13.0.0"
  },
  "peerDependenciesMeta": {
    "expo-haptics": {
      "optional": true
    },
    "react-native-svg": {
      "optional": true
    }
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@4.11.0",
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "create-react-native-library": {
    "type": "turbo-module",
    "languages": "kotlin-objc",
    "tools": [
      "jest",
      "lefthook",
      "release-it"
    ],
    "version": "0.56.0"
  }
}
